<GenderDropDown>
    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
    text: "Gender"
    theme_text_color: "Custom"
    text_color: 1,1,1,1
    md_bg_color: 0,0,0,1
    on_press: root.open_gender_dropdown()

<CategoryDropDown>
    pos_hint: {'center_x': 0.5, 'center_y': 0.65}
    text: "Category"
    theme_text_color: "Custom"
    text_color: 1,1,1,1
    md_bg_color: 0,0,0,1
