<ListItemWithCheckbox@OneLineAvatarIconListItem>
    MyAvatar:
        source: "data/logo/kivy-icon-128.png"
    MyCheckbox:

<EventListScreen>
    BoxLayout:
        ScrollView:
            pos_hint: {'center_x': 0.5, 'center_y': 0.375}
            MDList:
                id: scroll

<EventTextSearch>
    size_hint: .7, None
    pos_hint: {'center_x': 0.5, 'center_y': 0.945}
    hint_text: 'Search Event'
    mode: "rectangle"
    on_text: root.repopulate_event_list()

<TrackingScreen>
    size_hint: .7, None
    pos_hint: {'center_x': 0.5, 'center_y': 0.945}
    hint_text: 'Search Event'
    mode: "rectangle"
<LoginScreen>

<ContentNavigationDrawer>

    BoxLayout:
        orientation: 'vertical'
    

        FloatLayout:
            size_hint_y: None
            height: "205dp"

            canvas:
                Rectangle:
                    pos: self.pos
                    size: 320, 205
                    source: "Athletics-New-Zealand-Logo-1.jpg"

            BoxLayout:
                id: top_box
                size_hint_y: None
                height: "200dp"
                #padding: "10dp"
                x: root.parent.x
                pos_hint: {"top": 1}

            MDIconButton:
                icon: "close"
                x: root.parent.x + dp(10)
                pos_hint: {"top": 1}
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                on_release: root.parent.set_state('toggle')


        ScrollView:
            pos_hint: {"top": 1}

            GridLayout:
                id: box_item
                cols: 1
                size_hint_y: None
                height: self.minimum_height


BoxLayout:
    
    BoxLayout:
        orientation: 'vertical'   
        MDToolbar:
            id: main_toolbar
            title: "Home"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            md_bg_color: 0,0,0,1
            left_action_items: [['menu', lambda x: app.root.ids.nav_drawer.set_state('toggle')]]

        NavigationLayout:
            id: nav

            ScreenManager:
                id: MainScreenManager
                Screen:
                    name: 'screen1'
                    GenderDropDown: 
                    CategoryDropDown:
                    DisciplineDropDown:
                    ResultScoreButton:
                    ResultTextField:
                        id: resulttextfield
                    ResultEntry: 
                    
                    
                    
                    
                Screen:
                    name: 'screen2'
                    EventLevelDropDown:
                    PlacingDropDown:
                    PlacingScore:
                    PerformanceScore:   
            
                Screen:
                    name: 'screen3'
                    WindTextField:
                        id: windtextfield
                    EnterWind:
                    WindMod:
                    PerformanceScore:
                Screen:
                    name: 'screen4'
                    EventListScreen:
                        id: event_screen 
                    EventTextSearch:
                        id: event_search
                Screen:
                    name: 'screen5'
                    TrackingScreen:

            MDNavigationDrawer:
                id: nav_drawer

                ContentNavigationDrawer:
                    id: content_drawer

